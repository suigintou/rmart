<div id="edit" class="modal" role="dialog">
	<div class="modal-dialog">
		<form class="modal-content form-horizontal" id="edit-form" action="@Url.Action("Edit")" method="post">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				<h2>@PicturesResources.EditFormTitle</h2>
			</div>
			<div class="modal-body">
				<input type="hidden" name="returnUrl" value="@Request.RawUrl"/>
				
				<div class="form-group">
					<label for="tagsToAdd" class="col-md-3 control-label">@PicturesResources.AddTagsLabel</label>
					<div class="col-md-9">
						<input type="text" id="tagsToAdd" name="tagsToAdd" class="tags-box form-control" maxlength="200" autofocus="autofocus" autocomplete="off" />
					</div>
				</div>

				<div class="form-group">
					<label for="tagsToRemove" class="col-md-3 control-label">@PicturesResources.RemoveTagsLabel</label>
					<div class="col-md-9">
						<input type="text" id="tagsToRemove" name="tagsToRemove" class="tags-box form-control" maxlength="200" autocomplete="off" />
					</div>
				</div>

				<div class="form-group">
					<label for="rating" class="col-md-3 control-label">@PicturesResources.SetRatingLabel</label>
					<div class="col-md-4">
						@Html.DropDownList("rating", VisualizationHelper.RatingsList(true, true, PicturesResources.DoNotChange), new { @class = "form-control" })
					</div>
				</div>

				<div class="form-group">
					<label for="source" class="col-md-3 control-label">@PicturesResources.SetSourceLabel</label>
					<div class="col-md-9">
						<input type="url" id="source" name="source" class="form-control" placeholder="@PicturesResources.DoNotChange" />
						<label class="checkbox-inline">
							<input type="checkbox" name="deleteSource" value="@bool.TrueString" id="deleteSource" />
							@PicturesResources.Delete
						</label>
					</div>
				</div>

				@if (Request.IsUserInRole(UserRole.Moderator))
				{
					<div class="form-group">
						<label for="status" class="col-md-3 control-label">@PicturesResources.SetStatusLabel</label>
						<div class="col-md-5">
							@Html.DropDownList("status", VisualizationHelper.ModerationStatusesList(true, PicturesResources.DoNotChange), new { @class = "form-control" })
						</div>
					</div>

					<div class="form-group">
						<label for="comment" class="col-md-3 control-label">@PicturesResources.CommentLabel</label>
						<div class="col-md-9">
							<input type="text" id="comment" name="comment" maxlength="200" class="form-control" />
						</div>
					</div>
				}
			</div>
			<div class="modal-footer">
				<input type="submit" value="@PicturesResources.SaveButtonText" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>