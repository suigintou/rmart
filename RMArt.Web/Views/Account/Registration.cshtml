@model RegistrationModel
@{
	ViewBag.Title = AccountResources.RegistrationPageTitle;
}

<div class="page-header">
	<h1>@ViewBag.Title</h1>
</div>

@Html.ValidationSummary(true, SharedResources.UnsuccessfulOperationMessage)

<form action="@Url.Action("Registration")" method="post" class="form-horizontal">
	
	<div class="form-group">
		<label for="Login" class="col-md-2 control-label">@AccountResources.AccountLogin</label>
		<div class="col-md-4">
			@Html.TextBoxFor(m => m.Login, new { required = "required", maxlength = UsersValidation.MaximumLoginLength, pattern = UsersValidation.LoginValidationPattern, @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Login)
		</div>
	</div>

	<div class="form-group">
		<label for="Name" class="col-md-2 control-label">@AccountResources.AccountName</label>
		<div class="col-md-4">
			@Html.TextBoxFor(m => m.Name, new { required = "required", maxlength = UsersValidation.MaximumNameLength, @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Name)
		</div>
	</div>

	<div class="form-group">
		<label for="Email" class="col-md-2 control-label">@AccountResources.AccountEmail</label>
		<div class="col-md-4">
			@Html.TextBoxFor(m => m.Email, new { type = "email", required = "required", maxlength = UsersValidation.MaximumEmailLength, @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Email)
		</div>
	</div>

	<div class="form-group">
		<label for="Password" class="col-md-2 control-label">@AccountResources.Password</label>
		<div class="col-md-4">
			@Html.PasswordFor(m => m.Password, new { required = "required", @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Password)
		</div>
	</div>

	<div class="form-group">
		<label for="ConfirmPassword" class="col-md-2 control-label">@AccountResources.ConfirmPassword</label>
		<div class="col-md-4">
			@Html.PasswordFor(m => m.ConfirmPassword, new { required = "required", @class = "form-control" })
			@Html.ValidationMessageFor(m => m.ConfirmPassword)
		</div>
	</div>

	<div class="form-group">
		<label for="recaptcha_response_field" class="col-md-2 control-label">@SharedResources.CaptchaLabel</label>
		<div class="col-md-10">
			@ReCaptcha.GetHtml(language: UICulture.Substring(0, 2), theme: "clean")
			@Html.ValidationMessageFor(m => m.Captcha)
		</div>
	</div>

	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" class="btn btn-success" value="@AccountResources.RegisterButtonText" />
		</div>
	</div>

</form>