@model AccauntSettingsModel
@{
	ViewBag.Title = AccountResources.AccountSettingsPageTitle;
}

<div class="page-header">
	<h1>@ViewBag.Title</h1>
</div>

@Html.ValidationSummary(true, SharedResources.UnsuccessfulOperationMessage)

<form action="@Url.Action("AccountSettings")" method="post" class="form-horizontal">

	@Html.AntiForgeryToken()

	<div class="form-group">
		<label for="Login" class="control-label col-md-2">@AccountResources.AccountLogin</label>
		<div class="col-md-4">
			@Html.TextBoxFor(m => m.Login, new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Login)
		</div>
	</div>

	<div class="form-group">
		<label for="Email" class="control-label col-md-2">@AccountResources.AccountEmail</label>
		<div class="col-md-4">
			@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Email)
		</div>
	</div>

	<div class="form-group">
		<div class="col-md-offset-2 col-md-4">
			<div class="checkbox">
				<label>
					@Html.CheckBoxFor(m => m.PrivateProfile)
					@AccountResources.PrivateProfile
				</label>
			</div>
		</div>
	</div>

	<div class="form-group">
		<label for="Password" class="control-label col-md-2">@AccountResources.EnterPassword</label>
		<div class="col-md-4">
			@Html.PasswordFor(m => m.Password, new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Password)
		</div>
	</div>

	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" class="btn btn-primary" value="@AccountResources.SaveButtonText" />
		</div>
	</div>

</form>