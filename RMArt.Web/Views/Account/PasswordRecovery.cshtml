@model PasswordRecoveryModel
@{
	ViewBag.Title = AccountResources.PasswordRecoveryPageTitle;
}

<div class="page-header">
	<h1>@ViewBag.Title</h1>
</div>

@Html.ValidationSummary(true, SharedResources.UnsuccessfulOperationMessage)

<form action="@Url.Action("PasswordRecovery")" method="post" class="form-horizontal">

	<div class="form-group">
		<label for="LoginOrEmail" class="control-label col-md-2">@AccountResources.LoginOrEmail</label>
		<div class="col-md-4">
			@Html.TextBoxFor(m => m.LoginOrEmail, new { required = "required", @class = "form-control" })
			@Html.ValidationMessageFor(m => m.LoginOrEmail)
		</div>
	</div>
	
	<div class="form-group">
		<label for="recaptcha_response_field" class="control-label col-md-2">@SharedResources.CaptchaLabel</label>
		<div class="col-md-10">
			@ReCaptcha.GetHtml(language: UICulture.Substring(0, 2), theme: "clean")
			@Html.ValidationMessageFor(m => m.Captcha)
		</div>
	</div>
	
	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" class="btn btn-primary" />
		</div>
	</div>

</form>