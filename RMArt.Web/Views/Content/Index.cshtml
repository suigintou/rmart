@model IList<ContentPage>
@{
	ViewBag.Title = "Content Pages";
}

<div class="page-header">
	<h1>@ViewBag.Title <span class="badge">@Model.Count</span></h1>
</div>

<div class="btn-toolbar" style="margin-bottom: 15px;">
	<a href="@Url.Action("Create")" class="btn btn-default"><span class="glyphicon glyphicon-file"></span> Create</a>
</div>

<table class="table table-striped table-bordered table-condensed">
	<tr>
		<th>Name</th>
		<th>Culture</th>
		<th>Title</th>
		<th>Actions</th>
	</tr>
	@foreach (var p in Model)
	{
		<tr>
			<td>@p.Name</td>
			<td>@VisualizationHelper.CultureName(p.CultureID)</td>
			<td>@p.Title</td>
			<td>
				<a href="@Url.Action("Display", new { id = p.ID })" class="btn btn-default btn-xs">View</a>
				<a href="@Url.Action("Edit", new { id = p.ID })" class="btn btn-default btn-xs">Edit</a>
				<a href="@Url.Action("Delete", new { id = p.ID, returnUrl = Request.RawUrl })" class="btn btn-danger btn-xs">Delete</a>
			</td>
		</tr>
	}
</table>