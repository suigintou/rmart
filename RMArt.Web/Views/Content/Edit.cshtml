@model ContentPageEditModel
@{
	ViewBag.Title = !string.IsNullOrEmpty(Model.Name) ? Model.Name : "New" + " - Content";
}

<div class="page-header">
	<h1>@ViewBag.Title</h1>
</div>

<form action="@Url.Action("Edit")" method="post" class="form-horizontal">

	@Html.HiddenFor(m => m.ID)

	<div class="form-group">
		<label for="Name" class="col-md-2 control-label">Name</label>
		<div class="col-md-10">
			@Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Name)
		</div>
	</div>

	<div class="form-group">
		<label for="CultureID" class="col-md-2 control-label">Culture</label>
		<div class="col-md-10">
			@Html.DropDownListFor(m => m.CultureID, VisualizationHelper.SupportedCulturesList(), new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.CultureID)
		</div>
	</div>

	<div class="form-group">
		<label for="Title" class="col-md-2 control-label">Title</label>
		<div class="col-md-10">
			@Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Title)
		</div>
	</div>

	<div class="form-group">
		<label for="Content" class="col-md-2 control-label">Content</label>
		<div class="col-md-10">
			@Html.TextAreaFor(m => m.Content, new { rows = 30, @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Content)
		</div>
	</div>

	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<button class="btn btn-primary">Save</button>
			@if (Model.ID != null)
			{
				<a href="@Url.Action("Display", new { id = Model.ID })" class="btn btn-default">View</a>
			}
			<a href="@Url.Action("Index")" class="btn btn-default">Return to list</a>
		</div>
	</div>

</form>