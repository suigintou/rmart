@model HandleErrorInfo
@{
	Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>Error</title>
	@Styles.Render("~/Static/css/bundle")
</head>
<body>
	<div class="container">
		<div class="page-header">
			<h1>Error</h1>
		</div>
		
		<p>Sorry, an error occurred while processing your request.</p>

		@try
		{
			if (Request.IsUserInRole(UserRole.Administrator))
			{
				<pre>@Model.Exception.ToString()</pre>
			}
		}
		catch { }
	</div>
</body>
</html>