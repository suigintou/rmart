@model IEnumerable<Tag>
@{
	ViewBag.Title = TagsResources.CloudPageTitle;
}

<div class="page-header">
	<h1>@ViewBag.Title</h1>
</div>
<ul class="tag-cloud">
	@foreach (var t in Model)
 {
		<li style="font-size: @VisualizationHelper.TagSize(t.UsageCount, ViewBag.MinCount, ViewBag.MaxCount, 1, 3, ViewBag.Logarithmic)">
			@Html.Partial("ShowTag", t)
		</li>
	}
</ul>